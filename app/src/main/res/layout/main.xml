<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <!-- Game Information (Number of Games and Wins) -->



    <!-- Game Grid -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginRight="165dp"
            android:text="Games: 0"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Wins: 0"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="7"
        android:columnCount="5"
        android:padding="4dp"
        android:layout_margin="0dp">

        <!-- Define TextViews for a maximum of 7 rows and 5 columns -->
        <!-- Row 1 -->
        <TextView android:id="@+id/text1col1row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col1row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col1row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col1row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col1row" style="@style/LetterBox"/>

        <!-- Row 2 -->
        <TextView android:id="@+id/text1col2row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col2row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col2row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col2row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col2row" style="@style/LetterBox"/>

        <!-- Row 3 -->
        <TextView android:id="@+id/text1col3row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col3row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col3row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col3row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col3row" style="@style/LetterBox"/>

        <!-- Row 4 (for medium/easy) -->
        <TextView android:id="@+id/text1col4row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col4row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col4row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col4row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col4row" style="@style/LetterBox"/>

        <!-- Row 5 (for easy) -->
        <TextView android:id="@+id/text1col5row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col5row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col5row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col5row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col5row" style="@style/LetterBox"/>

        <!-- Row 6 (for easy) -->
        <TextView android:id="@+id/text1col6row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col6row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col6row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col6row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col6row" style="@style/LetterBox"/>

        <!-- Row 7 (for easy) -->
        <TextView android:id="@+id/text1col7row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text2col7row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text3col7row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text4col7row" style="@style/LetterBox"/>
        <TextView android:id="@+id/text5col7row" style="@style/LetterBox"/>

    </GridLayout>

    <!-- Alphabet Buttons -->

    <!--    350dp-->
    <GridLayout

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"

        android:layout_marginBottom="0dp"
        android:columnCount="7"
        android:padding="0dp"
        android:rowCount="4">

        <!-- Buttons A to Z (you can update this for all 26 alphabet buttons) -->

        <!-- Buttons A to Z -->
        <Button
            android:id="@+id/buttonA"
            style="@style/LetterButton"
            android:text="A"
            android:layout_margin="0dp"
            />

        <Button
            android:id="@+id/buttonB"
            style="@style/LetterButton"
            android:text="B" android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonC"
            style="@style/LetterButton"
            android:text="C" android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonD"
            style="@style/LetterButton"
            android:text="D" android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonE"
            style="@style/LetterButton"
            android:text="E" android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonF"
            style="@style/LetterButton"
            android:text="F" android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonG"
            style="@style/LetterButton"
            android:text="G"
            android:layout_margin="0dp" />

        <Button
            android:id="@+id/buttonH"
