            android:text="K"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonL"
            style="@style/LetterButton"
            android:text="L"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonM"
            style="@style/LetterButton"
            android:text="M"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonN"
            style="@style/LetterButton"
            android:text="N"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonO"
            style="@style/LetterButton"
            android:text="O"
            android:layout_margin="0dp" />

        <Button
            android:id="@+id/buttonP"
            style="@style/LetterButton"
            android:text="P"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonQ"
            style="@style/LetterButton"
            android:text="Q"
            android:layout_margin="0dp" />

        <Button
            android:id="@+id/buttonR"
            style="@style/LetterButton"
            android:text="R"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonS"
            style="@style/LetterButton"
            android:text="S"
            android:layout_margin="0dp" />

        <Button
            android:id="@+id/buttonT"
            style="@style/LetterButton"
            android:text="T"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonU"
            style="@style/LetterButton"
            android:text="U"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonV"
            style="@style/LetterButton"
            android:text="V"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonW"
            style="@style/LetterButton"
            android:text="W"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonX"
            style="@style/LetterButton"
            android:text="X"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonY"
            style="@style/LetterButton"
            android:text="Y"
            android:layout_margin="0dp"/>

        <Button
            android:id="@+id/buttonZ"
            style="@style/LetterButton"
            android:text="Z"
            android:layout_margin="0dp"/>

        <!-- Add the remaining buttons for H to Z similarly... -->

    </GridLayout>

    <!-- Control Buttons (Enter, Erase, Difficulty) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BBBCBC"
            android:text="Enter" />

        <Button
            android:id="@+id/buttonErase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BBBCBC"
            android:text="Erase" />
    </LinearLayout>

    <!-- Difficulty Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B3D58B"
            android:text="Easy" />

        <Button
            android:id="@+id/buttonMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D2D98E"
            android:text="Medium" />

        <Button
            android:id="@+id/buttonHard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D78C8C"
            android:text="Hard" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        >

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="#14FFFFFF"
            android:padding="0dp"
            android:text="Exit"
            android:textSize="14sp" />
        <!--  <Button
              android:id="@+id/buttonShare"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Share"
              android:layout_margin="8dp"
              />-->
    </LinearLayout>

</LinearLayout>